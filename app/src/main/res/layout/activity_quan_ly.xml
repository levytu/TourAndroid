<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanLyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMangHinhQuanLy"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ECBB29"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Quản Lý"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp">
        <ImageView
            android:id="@+id/img_QuanLy_ThemSP"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_24"
            android:layout_width="30dp"
            android:layout_gravity="right"
            android:layout_height="30dp"></ImageView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/toolbarMangHinhQuanLy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rcvQuanLy"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
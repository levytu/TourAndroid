<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarManHinhTimKiem"
        android:layout_width="match_parent"
        android:background="#ECBB29"
        app:title=""

        app:titleTextColor="#FFFFFF"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>
<EditText
    android:id="@+id/txteditSearch"
    android:hint="Nhập Tên Sản Phẩm Cần Tìm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/toolbarManHinhTimKiem">

</EditText>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvManHinhSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txteditSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>